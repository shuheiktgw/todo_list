<h1>グループメンバー一覧</h1>
<ul>
	<% @members.each do |member| %>
		<li><%= member.email %>
		<% if current_group.admin?(current_user) %>
			 |
			<%= link_to 'メンバー登録解除', member_deregister_group_path(member_id: member.id), method: :patch%>
			 |
				<% if current_group.admin?(member)%>
					<%= link_to '管理者登録解除', member_deadmin_group_path(member_id: member.id), method: :patch%>
				<% else %>
					<%= link_to '管理者登録', member_admin_group_path(member_id: member.id), method: :patch%>
				<% end %>
		<% end %>
	<% end %>
</ul>